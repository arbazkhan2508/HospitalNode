<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.4.0/fonts/remixicon.css" rel="stylesheet">
    <link rel="stylesheet" href="../stylesheets/myhospital.css">
    <link rel="stylesheet" href="../stylesheets/nav.css">
    <link rel="stylesheet" href="../stylesheets/loco.css">
    <link rel="stylesheet" href="../stylesheets/footer.css">
    <link rel="stylesheet" href="../stylesheets/search.css">
</head>
<body>
<style>
    #footer{
        position: initial;
        z-index: 9;
        margin-top: 12vh;
    }
     #main_nav{
        background-color: #fff;
     }
</style>
    <% include ./partials/nav.ejs %>
    <div id="main">
        <h1>Hospitals You Added In</h1>
        <% if(user.Hospitels.length >0 ){ %>
            <div id="courses">
               <% user.Hospitels.forEach(function(hospital){ %>
                    <div style="width:21vw;" id="singleCourse">
                        <div style="height: 25vh;" id="image">
                        <img src="../images/uploads/hospitalimages/<%= hospital.pic[0] %>" alt="">
                        </div>
                    <h2 id="courseName" onclick="window.location.href='/courses/CoursesDetails/Mastering-the-Art-of-Resume'"><%= hospital.HospitalName %></h2>
                    <h6 id="address" style="font-size: 1vmax;line-height: 1.2;margin-bottom: 1vmax;font-weight: 500;" id="courseName" onclick="window.location.href='#'"><%= hospital.Address %></h6>
                    
                        
                    <div style="mask-type: 1vmax;" id="button">
                                    <div onclick="window.location.href='/hospitalprofile/<%= hospital._id %>'" id="fees">
                                        <p>Show Details</p>
                                        <i class="ri-checkbox-circle-fill"></i>
                                    </div>
                                    
                                    <div onclick="window.location.href='/delete/Hospital/<%= hospital._id %>'" id="pay">
                                         <p>Delete Hospital</p>
                                    </div>
                    </div>
                    </div>
               <% }) %>
             </div>
          <% }else{ %>
                <div class="nov">
                    <h1 id="notEnrollYet">
                        You are not Added any  Aby Hospital  Yet
                         <br>
                        <button onclick="window.location.href='/addhospital'"> <a href="/addhospital">Add now</a></button> 
                   </h1>
                </div>
         <% } %>

    </div>
    <% include ./partials/footer.ejs %>
    <% include ./partials/loco.ejs  %>
    <script src="../javascripts/nav.js"></script>
    <script src="../javascripts/loader.js"></script>
    <script src="../javascripts/search.js"></script>
</body>
</html>